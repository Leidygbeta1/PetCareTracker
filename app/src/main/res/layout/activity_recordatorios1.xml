<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tituloRecordatorioVacunas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recordatorio de Vacunas"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="32dp"
        android:textStyle="bold" />

    <!-- Botón para ver calendario -->
    <Button
        android:id="@+id/btnVerCalendario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Calendario"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF" />

    <!-- Botón para agregar un nuevo recordatorio con mayor espacio -->
    <Button
        android:id="@+id/btnAgregarRecordatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Recordatorio"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF" />

    <!-- Botón para regresar a la pantalla principal -->
    <Button
        android:id="@+id/btnAtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atrás"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF" />

</LinearLayout>
