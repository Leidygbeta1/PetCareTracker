<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Spinner para seleccionar la mascota -->
    <TextView
        android:id="@+id/tvMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar Mascota"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Spinner para seleccionar el tipo de atención -->
    <TextView
        android:id="@+id/tvTipoAtencion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar Tipo de Atención"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerTipoAtencion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Contenedor de opciones dinámicas para el tipo de atención -->
    <LinearLayout
        android:id="@+id/contenedorOpciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <!-- Botón para guardar el registro -->
    <Button
        android:id="@+id/btnGuardarRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Registro"
        android:layout_marginTop="24dp"/>

    <!-- Botón para regresar -->
    <Button
        android:id="@+id/btnAtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atrás"
        android:layout_marginTop="16dp"/>
</LinearLayout>
